// Place your key bindings in this file to override the defaultsauto[]
[
  {
    "key": "alt+cmd+\\",
    "command": "workbench.files.action.showActiveFileInExplorer",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+r",
    "command": "workbench.action.tasks.reRunTask",
    "when": "taskCommandsRegistered && !terminalFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+r",
    "command": "-workbench.action.tasks.reRunTask",
    "when": "taskCommandsRegistered && !terminalFocus"
  },
  {
    "key": "ctrl+d",
    "command": "workbench.action.debug.run",
    "when": "debuggersAvailable && !inDebugMode && !terminalFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+d",
    "command": "-workbench.action.debug.run",
    "when": "debuggersAvailable && !inDebugMode && !terminalFocus"
  },
  {
    "key": "cmd+;",
    "command": "-workbench.action.tasks.configureTaskRunner"
  },
  {
    "key": "cmd+i",
    "command": "composerMode.agent"
  },
  {
    "key": "cmd+; l",
    "command": "multi.rerunRustNew",
    "when": "!terminalIsOpen && editorLangId == 'rust'"
  },
  {
    "key": "cmd+; l",
    "command": "multi.rerunRustReuse",
    "when": "terminalIsOpen && editorLangId == 'rust'"
  },
  {
    "key": "cmd+; cmd+l",
    "command": "multi.rerunRustNew",
    "when": "!terminalIsOpen && editorLangId == 'rust'"
  },
  {
    "key": "cmd+; cmd+l",
    "command": "multi.rerunRustReuse",
    // "when": "terminalIsOpen"
    "when": "terminalIsOpen && editorLangId == 'rust'"
  },
  {
    "key": "cmd+right",
    "command": "-editor.action.inlineSuggest.acceptNextWord",
    "when": "cppSuggestion && !editorReadonly || inlineSuggestionVisible && !editorReadonly"
  },
  {
    "key": "cmd+e",
    "command": "composerMode.background"
  },
  {
    "key": "cmd+e",
    "command": "composerMode.background"
  }
]
